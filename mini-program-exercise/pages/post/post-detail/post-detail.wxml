<view class="post-detail-container">
  <image class="headerImg" src="{{headImgSrc}}"></image>
  <view class="author-wrapper">
    <image class="author-avatar" src="{{avatar}}"></image>
    <text class="author-name">{{author}}</text>
    <text class="post-date">发表于 {{dateTime}}</text>
  </view>
  <view class="title-wrapper">
    <text class="title">{{title}}</text>
  </view>
  <view class="split-bar-wrapper" >
    <view class="split-bar"></view>
    <image class="icon collection-icon" src="/images/icon/collection.png"></image>
    <image class="icon share-icon" src="/images/icon/share.png"></image>
  </view>
  <view class="article-wrapper">{{detail}}</view>
</view>